---
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";
import MailIcon from "../components/icons/Mail.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/GitHub.astro";

---

<div class="max-w-xl">
    <div class="flex gap-4">
      <img
        class="rounded-full shadow-lg size-16"
        src="didac.jpeg"
        alt="Didac's photo"
      />

      <a
        href="https://www.linkedin.com/in/didac-gros-7257991b1/"
        target="_blank"
        rel="noopener"
        class="flex items-center transition md:justify-center md:hover:scale-105"
      >
        <Badge>Disponible para trabajar</Badge>
      </a>
    </div>
    <h1
      class="text-white text-2xl lg:text-4xl font-bold flex flex-row gap-x-4 pb-6 mt-4"
    >
      Hola, soy Dídac Gros
    </h1>
    <h2 class="text-base lg:text-xl text-wrap">
      <span
        >Estudiante de ingenieria informática en la Universitat de Girona.</span
      >
      <span class="text-yellow-100"
        >Desarrollador de Software en crecimiento.
      </span>
      <span>Siempre abierto a nuevos desafíos y colaboraciones.</span>
    </h2>

    <nav class="flex flex-wrap gap-4 mt-6">
      <SocialPill href="mailto:didacgros85@gmail.com">
        <MailIcon class="size-5" />
        didacgros85@gmail.com
      </SocialPill>
      <SocialPill href="https://www.linkedin.com/in/didac-gros-7257991b1/">
        <LinkedInIcon class="size-5" />
        LinkedIn
      </SocialPill>
      <SocialPill href="https://github.com/f1nga">
        <GithubIcon class="size-5" />
        Github
      </SocialPill>
    </nav>
  </div>